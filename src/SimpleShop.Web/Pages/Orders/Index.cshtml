@page
@model SimpleShop.Web.Pages.Orders.IndexModel
@{
    ViewData["Title"] = "Đơn đặt hàng";
}

<div class="container">
    @if(Model.Orders.Any())
    {
        <div class="block has-text-centered-mobile">
            <h1 class="title">Đơn đặt hàng của tôi</h1>
        </div>
        <div class="list has-visible-pointer-controls">
            @foreach(var order in Model.Orders)
            {
                <div class="list-item p-5">
                    <div class="list-item-content">
                        <div class="list-item-title">
                            Đặt hàng #@order.Number
                        </div>
                        <div class="list-item-description">
                            Ngày đặt hàng: @order.CreatedDate
                        </div>
                    </div>
                    <div class="list-item-controls">
                        <div class="is-right">
                            <a class="button is-dark" asp-page="Details" asp-route-id="@order.Id">Chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="block has-text-centered">
            <span class="icon is-large">
                <i class='bx bx-package bx-lg'></i>
            </span>
        </div>
        <div class="has-text-centered">
            <p class="subtitle has-text-weight-medium">Có vẻ như bạn chưa đặt đơn hàng nào</p>
            <a class="button is-outlined" asp-area="" asp-page="/Index">Back Shop</a>
        </div>
    }
</div>

