@model SimpleShop.Domain.Entities.Cart?


<div class="has-shadow is-white has-border">
    <div class="container">
        <div class="d-flex row">
            <div class="col-4">
                <div class="navbar-brand">
                    <a class="navbar-item is-size-4" asp-page="/Index" asp-area="">AdidasShop</a>
                    <a class="navbar-burger" role="button" aria-label="menu" aria-expanded="false">
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                    </a>
                </div>
            </div>
            <div class="col-8">
                <div class="navbar-menu" id="navbar-menu">

                    <div class="navbar-end">
                        @if (@Model is not null)
                        {
                            <a class="navbar-item" asp-page="/Cart/Index" asp-area="">
                                <span class="icon-text">
                                    <span class="icon is-hidden-touch">
                                        <i class='bx bx-cart bx-sm'></i>
                                    </span>
                                    <span class="is-hidden-desktop">Giỏ</span>
                                    <span>(@Model.ItemsCount)</span>
                                </span>
                            </a>
                            <div class="navbar-item has-dropdown is-hoverable">
                                <a class="navbar-link is-arrowless">
                                    <span class="icon-text">
                                        <span class="icon is-hidden-touch">
                                            <i class='bx bx-user bx-sm'></i>
                                        </span>
                                        <span class="is-hidden-desktop">Tài khoản</span>
                                    </span>
                                </a>
                                <div class="navbar-dropdown is-right">
                                    <a class="navbar-item" asp-page="/Orders/Index" asp-area="">My Order</a>
                                    <hr class="navbar-divider">
                                    <a class="navbar-item" asp-area="Identity" asp-page="/Account/Logout">Log Out</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <a class="navbar-item" asp-page="/Account/Login" asp-area="Identity">
                                <span class="icon">
                                    <i class='bx bx-user bx-sm'></i>
                                </span>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


