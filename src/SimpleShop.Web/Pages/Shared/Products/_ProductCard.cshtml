@using SimpleShop.Domain.Entities
@model Product

<div class="card">
    <div class="card-image">
        <a asp-route-id="@Model.Id" asp-page="Products/Index" asp-area="">
            <figure class="image is-square">
                <img src="~/assets/@Model.ImagePath">
            </figure>
        </a>
    </div>
    <div class="card-content pt-1 pl-0">
        <p class="is-size-5">@Model.Name</p>
        <p class="has-text-weight-medium">$@Model.Price</p>
    </div>
</div>
